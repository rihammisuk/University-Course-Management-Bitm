@using UniversityMS.Models
@model UniversityMS.Models.Department
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    List<Department> departments = ViewBag.DepartmentList;
}

<html>
    
    <head>
        <title>Show Department</title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <h2>View All Department</h2>
        
        <div></div>

        <div class="col-md-offset-2 col-md-10">
            <fieldset>
                <legend></legend>
                <table class="table table-responsive table-hover"   >
                    <tr>
                        <th>Code</th>

                        <th>Name</th>

                    </tr>


                    @foreach (Department aDepartment in departments)
                    {
                        <tr>
                            <td class="success">@aDepartment.DeptCode</td>

                            <td class="danger">@aDepartment.DeptName</td>
                        </tr>
                        <tr></tr>
                        <tr></tr>

                    }

                </table>

            </fieldset>
        </div>
        
        <script>

        </script>


    </body>

</html>

